@model asp.net_login_form.Models.Users

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm("Authorize", "Users", FormMethod.Post))
{
<table>
    <tr>
        <td></td>
        <td></td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(model => model.username)
        </td>
        <td>
            @Html.EditorFor(model => model.username)
        </td>
    </tr>
    <tr>
        <td></td>
        <td>@Html.ValidationMessageFor(model => model.username)</td> <!-- Show the error message -->
    </tr>
    <tr>
        <td>
            @Html.LabelFor(model => model.password)
        </td>
        <td>
            @Html.EditorFor(model => model.password)
        </td>
    </tr>
    <tr>
        <td></td>
        <td>@Html.ValidationMessageFor(model => model.password)</td> <!-- Show the error message -->
    </tr>
    <tr>
        <td colspan="2">
            @Html.DisplayFor(model => model.LoginErrorMessage)
        </td>
    </tr>
    <tr>
        <td></td>
        <td>
            <input type="submit" name="name" value="Login" />
        </td>
    </tr>
</table>
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>